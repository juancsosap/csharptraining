<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Resources.Shared.View.AppName</title>
    <link href="~/favicon.png" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Resources.Shared.View.AppName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Resources.Home.IndexView.Menu, "Index", "Home")</li>
                    <li>@Html.ActionLink(Resources.Home.AboutView.Menu, "About", "Home")</li>
                    <li>@Html.ActionLink(Resources.Home.ContactView.Menu, "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(Resources.BlogPost.View.Menu, "Index", "BlogPost")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <section class="container body-content">
        @RenderBody()
    </section>
    <footer class="navbar-fixed-bottom">
        <div class="panel-footer">
            <span>&copy; @DateTime.Now.Year - @Resources.Shared.View.AppName</span>
            @if (User.Identity.IsAuthenticated)
            {
                <span class="pull-right">User: <b>@User.Identity.Name</b></span>
            }
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
