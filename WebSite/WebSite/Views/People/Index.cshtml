@using WebSite.Models.Views
@using WebSite.Models

@model Indexer<Person>

@{
    ViewBag.Title = Resources.Person.Views.ListTitle;
}

<h2>@Resources.Person.Views.ListTitle</h2>

<div id="menu" class="container panel">
    @Html.ActionLink(Resources.Shared.Create, "Create", null, new { @class = "btn btn-success" })
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().Rut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data.First().Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Data)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <div class="btn-group btn-group-sm">
                    @Html.ActionLink(Resources.Shared.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink(Resources.Shared.Details, "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink(Resources.Shared.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-default" })
                </div>
            </td>
        </tr>
    }

</table>

@Html.Partial(Resources.Partial.BasicPagination, Model)